{
    "version": "0.1.0",
    "osx": {
        "command": "/bin/bash",
        "options": {
            "cwd": "${workspaceRoot}"
        },
        "tasks": [
            {
                "taskName": "buildForDebug",
                "suppressTaskName": true,
                "args": [
                    "-c",
                    "./scripts/dockerTask.sh buildForDebug"
                ],
                "isBuildCommand": false,
                "showOutput": "always"
            },
            {
                "taskName": "cleanup",
                "suppressTaskName": true,
                "args": [
                    "-c",
                    "./scripts/dockerTask.sh cleanup"
                ],
                "isBuildCommand": false,
                "showOutput": "always"
            }
        ]
    }
}